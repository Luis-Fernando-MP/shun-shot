{
  "compilerOptions": {
    "outDir": "./public/workers",
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["workers/**/*.ts"]
}
