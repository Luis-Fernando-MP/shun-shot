{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@pages/*": ["./src/app/(pages)/*"],
      "@editor/*": ["./src/app/(pages)/editor/*"],
      "@editor-store/*": ["./src/app/(pages)/editor/store/*"],
      "@code/*": ["./src/app/(pages)/(current)/*"],
      "@code-store/*": ["./src/app/(pages)/(current)/store/*"],
      "@sass/*": ["./src/sass/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
